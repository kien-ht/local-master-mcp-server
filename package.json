{
  "name": "local-master-mcp-server",
  "version": "1.0.0",
  "description": "Local Master MCP Server for Inter-Terminal Communication",
  "type": "module",
  "author": "Local Master MCP",
  "scripts": {
    "start": "node --loader ts-node/esm src/index.ts",
    "dev": "concurrently \"npx @modelcontextprotocol/inspector\" \"yarn start\"",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest tests/unit",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest tests/integration",
    "test:mcp": "mcp-jest node --loader ts-node/esm src/index.ts --tools send_message,get_unread_messages,list_terminals,set_terminal_state,mark_message_read,get_oldest_unread_message"
  },
  "private": true,
  "devDependencies": {
    "@jest/globals": "^30.0.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.13.10",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.0",
    "jest": "^30.0.5",
    "mcp-jest": "^1.0.13",
    "ts-jest": "^29.4.1",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.1",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "ts-node": "^10.9.2",
    "uuid": "^11.0.5",
    "zod": "^3.24.2"
  }
}
